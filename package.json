{
  "name": "yaksha_auth_service",
  "version": "1.0.0",
  "description": "authentication service for yaksha",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" ",
    "test": "jest --coverage",
    "test:watchAll": "jest --watchAll",
    "test:watch": "jest --watch",
    "start:dev": "ts-node-dev --respawn ./src/index.ts",
    "start": "tsc && node ./dist/index.js",
    "container:prod": "docker-compose -f docker-compose.yml up --build -V",
    "container:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build -V"
  },
  "keywords": [
    "authentication",
    "authorization"
  ],
  "author": "Vijay",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/express-serve-static-core": "^4.17.29",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.3.2",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@types/mongoose": "^5.11.97",
    "axios": "^0.27.2",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "mongoose": "^6.9.2"
  }
}

{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": ["./src/types/","./node_modules/@types"],
        
        
    },
    "include": [
        "src",
        "tests"
    ],
    "exclude": [
        "node_modules",
        
    ]
}
